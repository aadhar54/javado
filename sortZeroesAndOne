public class Solution {  

    public static void sortZeroesAndOne(int[] arr) {
    	//Your code goes here
        
         int i=0;
      int j=arr.length-1;
    while(i<j){
      if(arr[i]==1){
        if(arr[j]==0){
          arr[i]=0;
            arr[j]=1;
        }
        else{
          j--;
        }
      }
      else{
        i++;
      }
    }
    }
}